
// GLで表示時
// 出力を2ｘ2までとします。
void match22(float32 &out_x ,float32 out_y ,int32_t in_x ,int32_t in_y ,const flat32 Min ,const flat32 Max)
{
 if(in_x < in_y){
   out_x = (float32)in_y / (float32)in_x * Max;
   if(out_x < Min) out_x = Minf;
   if(out_x > Max) out_x = Maxf;
   out_y = Max;
 }else{
   out_x = Max;
   out_y = (float32)in_x / (float32)in_y * Max;
   if(out_y < Minf) out_y = Minf;
   if(out_y > Maxf) out_y = Maxf;
 }
}
