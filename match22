
// GLで表示時
// 出力を2ｘ2までとします。
void match22(float32 &out_x ,float32 out_y ,int32_t in_x ,int32_t in_y)
{
  out_x = 0;
  out_y = 0;
  
  
 if(in_x < in_y){
   out_x = (float32)in_y / (float32)in_x * 2.0f;
   if(out_x < 1.0f) out_x = 1.0f;
   if(out_x > 2.0f) out_x = 2.0f;
   out_y = 2.0f;
 }else{
   out_x = 2.0f;
   out_y = (float32)in_x / (float32)in_y * 2.0f;;
   if(out_y < 1.0f) out_y = 1.0f;
   if(out_y > 2.0f) out_y = 2.0f;
 }
  
}
